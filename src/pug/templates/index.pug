extends ../layout/main.pug
include ../modules/mixins/list-products/list1

block variables
    include ../abstraction/variables
block head 
    include ../partials/head/head

block title
    each title in titles
        if title == indexTitles
            title= title.company

block content 
    include ../sections/main-section/main-section

    if title.company
        h3 it's title = company

    +list1('list1', ...list1)

    include ../modules/includes/forms/form-name-phone

    each texts, el in text
        if el == 0
            p(class=pClass)= texts

    each url in urls
        if url == urlLinkMenu
            a(href=url.urlIndex) Index Page
            a(href=url.urlCompany) About Company
    p salut

    each url, i in urls
        a(href=url)
